<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:columnCount="4"
        android:rowCount="10">

        <TextView
            android:id="@+id/etTxtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Date"/>
        <EditText
            android:id="@+id/etregion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_row="0"
            android:cursorVisible="false"
            android:editable="false"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/etTxtDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:autoText="false"
            android:text="Todayes Day " />

        <TextView
            android:id="@+id/etTimeNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:text="Time"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Name"/>
        <EditText
            android:id="@+id/etname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:cursorVisible="false"
            android:editable="false"
            android:inputType="textNoSuggestions"
            android:textSize="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="DESIGNATION"/>
        <EditText
            android:id="@+id/etDesignation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_row="2"
            android:cursorVisible="false"
            android:editable="false"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:textSize="12dp"/>
        <ImageButton
            android:id="@+id/bProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"
            android:src="@drawable/ic_face_black_24dp"/>
            <TextView
                android:id="@+id/lblProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="4"
                android:text="Profile"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        <ImageButton
            android:id="@+id/bCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:src="@drawable/ic_call_black_24dp"/>
        <TextView
            android:id="@+id/lblProfile1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="4"
            android:text="Call"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <ImageButton
            android:id="@+id/bText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="3"
            android:src="@drawable/ic_textsms_black_24dp"/>
        <TextView
            android:id="@+id/lblProfile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="4"
            android:text="Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <Button
            android:id="@+id/bLogout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:background="@drawable/ic_power_settings_new_black_24dp" />
        <TextView
            android:id="@+id/lblProfile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="4"
            android:text="Log Out"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_columnSpan="4"
            android:layout_row="5"
            android:background="@android:color/darker_gray"/>
    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="6">
    <Button
                android:id="@+id/bPJP"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:drawableLeft="@drawable/ic_chrome_reader_mode_black_24dp"
                android:minHeight="80dp"
                android:minWidth="150dp"
                android:text="My AGENDA"/>
            <Button
                android:id="@+id/bALERT"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_row="0"
                android:drawableLeft="@drawable/ic_warning_black_24dp"
                android:minHeight="80dp"
                android:minWidth="150dp"
                android:text="Alert/Task"/>

            <Button
                android:id="@+id/bSURVEY"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="1"
                android:drawableLeft="@drawable/ic_note_add_black_24dp"
                android:minHeight="80dp"
                android:minWidth="150dp"
                android:text="Survey"/>
            <Button
                android:id="@+id/bREPORT"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_row="1"
                android:drawableLeft="@drawable/ic_assessment_black_24dp"
                android:minHeight="80dp"
                android:minWidth="150dp"
                android:text="View Report"/>
        <Button
            android:id="@+id/bTARGET"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_row="2"
            android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
            android:minHeight="80dp"
            android:minWidth="150dp"
            android:text="My Target"/>
        <Button
            android:id="@+id/bLOCATION"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_row="2"
            android:drawableLeft="@drawable/ic_accessibility_black_24dp"
            android:minHeight="80dp"
            android:minWidth="150dp"
            android:text="Where Am I ?"/>
        <Button
            android:id="@+id/bCONTACTUS"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_row="3"
            android:drawableLeft="@drawable/ic_perm_phone_msg_black_24dp"
            android:minHeight="80dp"
            android:minWidth="150dp"
            android:text="Contact HQ"/>
        <Button
            android:id="@+id/bOTHERS"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_row="3"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:minHeight="80dp"
            android:minWidth="150dp"
            android:text="OTHERS"/>
        </GridLayout>
    </ScrollView>
</LinearLayout>