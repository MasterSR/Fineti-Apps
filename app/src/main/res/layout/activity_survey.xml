<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fineti.myfineti.fineti.Survey">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:columnCount="4"
        android:rowCount="10">
        <TextView
            android:id="@+id/etTxtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Date"/>
        <EditText
            android:id="@+id/etregion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_row="0"
            android:cursorVisible="false"
            android:editable="false"
            android:inputType="textNoSuggestions"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/etTxtDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_row="0"
            android:autoText="false"
            android:text="Todays Day " />

        <TextView
            android:id="@+id/etTimeNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:text="Time"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Name"/>
        <EditText
            android:id="@+id/etname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:cursorVisible="false"
            android:editable="false"
            android:inputType="textNoSuggestions"
            android:textSize="12dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_columnSpan="4"
            android:layout_row="5"
            android:background="@android:color/darker_gray"/>
    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TYPE OF SURVEY"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="PJP"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />
        <Button
            android:id="@+id/bDBOrderPJP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_description_black_48dp"
            android:text="Go WITH PJP" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="NON-PJP"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"/>
    <Button
        android:id="@+id/bDBOrderNONPJP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_class_black_48dp"
        android:text="Go WITH OUT PJP" />
    <ImageButton
        android:id="@+id/bBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_keyboard_backspace"
        />
</LinearLayout>
