<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fineti.myfineti.fineti.Report">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="REPORT SUMMARY"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutMode="clipBounds">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="7">
        <Button
            android:id="@+id/bMasterReportView"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:drawableLeft="@drawable/ic_chrome_reader_mode_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:singleLine="false"
            android:text="View MASTER REPORT INSIDE" />
        <Button
            android:id="@+id/bToDayRprt"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:drawableLeft="@drawable/ic_speaker_notes_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:singleLine="false"
            android:text="View MASTER REPORT OUTSIDE"/>
        <Button
            android:id="@+id/bShwFltrRprt"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:drawableLeft="@drawable/ic_filter_frames_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:singleLine="false"
            android:text="SHOW FILTER REPORT"/>
        <Button
            android:id="@+id/bSURVEx"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:drawableLeft="@drawable/ic_filter_drama_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:singleLine="false"
            android:text="DOWNLOAD FILTER REPORT"/>
        <Button
            android:id="@+id/bDwnldMstrRprt"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"
            android:drawableLeft="@drawable/ic_cloud_download_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:singleLine="false"
            android:text="Download Master Report"/>
        <Button
            android:id="@+id/bSURVEY1"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:drawableLeft="@drawable/ic_file_download_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:singleLine="false"
            android:text="Download Last day's Report"/>
        <Button
            android:id="@+id/bSURVEY2"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="4"
            android:drawableLeft="@drawable/ic_perm_contact_calendar_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:singleLine="false"
            android:text="View Loggedin User"/>
        <Button
            android:id="@+id/bRegisterLink"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="4"
            android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:minWidth="150dp"
            android:singleLine="false"
            android:text="Add User"/>
        <Button
            android:id="@+id/bSURVEY5"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="5"
            android:drawableLeft="@drawable/ic_cloud_queue_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:singleLine="false"
            android:text="Download User Master"/>
        <Button
            android:id="@+id/bSURVEY6"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="5"
            android:drawableLeft="@drawable/ic_delete_black_24dp"
            android:maxWidth="150dp"
            android:minHeight="90dp"
            android:minWidth="150dp"
            android:singleLine="false"
            android:text="Delete User"/>
        <Button
            android:id="@+id/bCONTACTUS"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|center"
            android:layout_row="6"
            android:drawableLeft="@drawable/ic_perm_phone_msg_black_24dp"
            android:minHeight="80dp"
            android:minWidth="150dp"
            android:text="Contact HQ"/>
        <Button
            android:id="@+id/bMail"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="6"
            android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
            android:minHeight="80dp"
            android:minWidth="150dp"
            android:text="Mail Report"/>
        </GridLayout>
    </ScrollView>

</LinearLayout>
